<div class="container">
  <h2 class="text-center text-light p-2">私房錢記帳本</h2>
  <div class="row">
    <!-- left side order list -->
    <div class="col-md-6 p-3">
      <div class="card">
        <div class="card-body-totalprice p-3">
          <h2 class="totalprice">總金額</h2>
          <h2><span class="badge badge-secondary text-right">{{totalAmount}}</span></h2>
        </div>
      </div>
      <div class="dropdown m-2">
        <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown"
          aria-haspopup="true" aria-expanded="false">
          找尋
        </a>
        <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
          <form action="/records/{{ Records._id }}" method="post">
            <label><input type="radio" name="category" value="家居物業">家居物業</label>
            <label><input type="radio" name="category" value="交通出行">交通出行</label>
            <label><input type="radio" name="category" value="休閒娛樂">休閒娛樂</label>
            <label><input type="radio" name="category" value="餐飲食品">餐飲食品</label>
            <label><input type="radio" name="category" value="其他">其他事項</label>
          </form>
        </div>
      </div>
      {{#each Records}}
      <div class="card expense mb-3">
        <div class="card-body p-2">
          <div class="row">
            <div class="col-6">
              <div class="text-left">
                <a href="/records/{{this._id}}/edit">
                  <i class="fas fa-pen-square"></i>
                </a>
              </div>
            </div>
            <div class="col-6">
              <div class="text-right">
                <form action="./records/{{ this._id }}/delete" method="POST">
                  <button type="submit"><i class="fas fa-trash-alt"></i></button>
                </form>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-4">
              {{#switch this.category}}
              {{#case '家居物業'}} <i class="fas fa-home"></i> {{/case}}
              {{#case '交通出行'}} <i class="fas fa-shuttle-van"></i> {{/case}}
              {{#case '休閒娛樂'}} <i class="fas fa-grin-beam"></i> {{/case}}
              {{#case '餐飲食品'}} <i class="fas fa-utensils"></i> {{/case}}
              {{#case '其他'}} <i class="fas fa-pen"></i>{{/case}}
              {{/switch}}
            </div>
            <div class="col-8">
              <h6 class="card-title mb-1">{{this.name}}</h6>
              <div class="card-text">{{this.category}}</div>
              <div class="card-text">{{this.date}}</div>
              <div class="card-text text-right">$ <span data-drink-price>{{this.amount}}</span></div>
            </div>
          </div>
        </div>
      </div>
      {{/each}}
    </div>
    <!-- /left side order list-->

    <!-- right side menu -->
    <div class="col-md-6 p-3">
      <a href="/records/new">
        <button type=" button" class="btn btn-light btn-lg btn-block">新增支出</button>
      </a>
    </div>
    <!-- /right side menu -->
  </div>
</div>